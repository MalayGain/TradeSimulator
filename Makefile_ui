# Compiler and flags
CXX = g++
CXXFLAGS = -Wall -std=c++17

# Include and library paths
INCLUDES = -I. -Icore -Inetwork -Imodels -Iutils -Iui -IC:/msys64/mingw64/include
LIBS = -LC:/msys64/mingw64/lib -lboost_system -lws2_32

# Source files
SRCDIRS = core network models utils ui
SRC = $(wildcard main.cpp $(foreach dir, $(SRCDIRS), $(dir)/*.cpp))
OBJ = $(SRC:.cpp=.o)

# Output binary
TARGET = TradeSim.exe

# Default build
all: $(TARGET)

# Linking
$(TARGET): $(OBJ)
	$(CXX) $(CXXFLAGS) -o $@ $^ $(LIBS)

# Compilation rule
%.o: %.cpp
	$(CXX) $(CXXFLAGS) $(INCLUDES) -c $< -o $@

# Clean rule
clean:
	rm -f $(OBJ) $(TARGET)

.PHONY: all clean

